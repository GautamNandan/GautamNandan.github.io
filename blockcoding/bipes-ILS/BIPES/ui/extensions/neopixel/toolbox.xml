  <category name="ILS NeoPixel" colour="#9966FF">
    
    <!-- Setup Section -->
    <label text="âš™ï¸ Setup" web-class="blocklyTreeLabel"></label>
    <comment pinned="true">Connect NeoPixel data wire to the GPIO pin you specify below</comment>
    
    <block type="neopixel_init">
      <value name="PIN">
        <shadow type="math_number">
          <field name="NUM">25</field>
        </shadow>
      </value>
      <value name="NUMBER">
        <shadow type="math_number">
          <field name="NUM">8</field>
        </shadow>
      </value>
    </block>

    <sep gap="32"></sep>

    <!-- Color Creation Section -->
    <label text="ðŸŽ¨ Create Colors" web-class="blocklyTreeLabel"></label>
    <comment pinned="true">Use these blocks to create colors. RGB values go from 0 to 255</comment>
    
    <block type="neopixel_color_picker"></block>
    
    <block type="neopixel_color_rgb">
      <value name="RED">
        <shadow type="math_number">
          <field name="NUM">255</field>
        </shadow>
      </value>
      <value name="GREEN">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="BLUE">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>

    <block type="neopixel_color_hsl">
      <value name="HUE">
        <shadow type="math_number">
          <field name="NUM">180</field>
        </shadow>
      </value>
      <value name="SATURATION">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
      <value name="LIGHTNESS">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>

    <sep gap="32"></sep>

    <!-- Control Section -->
    <label text="ðŸ’¡ Control LEDs" web-class="blocklyTreeLabel"></label>
    <comment pinned="true">LED numbers start at 0. First LED is 0, second is 1, etc.</comment>
    
    <block type="neopixel_set_pixel">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="LED">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="COLOR">
        <shadow type="neopixel_color_picker"></shadow>
      </value>
    </block>

    <block type="neopixel_show">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>

    <sep gap="32"></sep>

    <!-- Pattern Section -->
    <label text="âœ¨ Patterns" web-class="blocklyTreeLabel"></label>
    
    <block type="neopixel_fill_all">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="COLOR">
        <shadow type="neopixel_color_picker"></shadow>
      </value>
    </block>

    <block type="neopixel_fill_range">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="START">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="END">
        <shadow type="math_number">
          <field name="NUM">7</field>
        </shadow>
      </value>
      <value name="COLOR">
        <shadow type="neopixel_color_picker"></shadow>
      </value>
    </block>

    <block type="neopixel_clear">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>

    <sep gap="32"></sep>

    <!-- Brightness Section -->
    <label text="ðŸ”† Brightness" web-class="blocklyTreeLabel"></label>
    <comment pinned="true">Brightness from 0 (off) to 255 (maximum bright)</comment>
    
    <block type="neopixel_brightness">
      <value name="STRIP">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="BRIGHTNESS">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>

  </category>
