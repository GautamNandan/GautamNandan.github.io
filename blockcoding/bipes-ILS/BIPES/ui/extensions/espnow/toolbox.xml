<category name="ESP-NOW" colour="230">
  
  <label text="Wireless Communication"></label>
  <button text="Learn about:espnow" callbackKey="loadExtDoc"></button>
  <button text="Load example:espnow_test1" callbackKey="loadExtExample"></button>

  <!-- Initialize Block -->
  <block type="espnow_init">
    <comment pinned="false" h="80" w="160">Initialize ESP-NOW and print MAC address to console.</comment>
  </block>
  
  <!-- Get MAC Address -->
  <block type="espnow_get_mac">
    <comment pinned="false" h="80" w="160">Returns this device's MAC address as a string.</comment>
  </block>
  
  <!-- Add Peer Block -->
  <block type="espnow_add_peer">
    <value name="MAC">
      <shadow type="text">
        <field name="TEXT">AA:BB:CC:DD:EE:FF</field>
      </shadow>
    </value>
    <comment pinned="false" h="80" w="160">Add a peer device using its MAC address. Format: AA:BB:CC:DD:EE:FF</comment>
  </block>
  
  <!-- Send Message (Simple) -->
  <block type="espnow_send_simple">
    <value name="MESSAGE">
      <shadow type="text">
        <field name="TEXT">Hello</field>
      </shadow>
    </value>
    <comment pinned="false" h="80" w="160">Send message to the first peer (peer 0).</comment>
  </block>
  
  <!-- Send Message (Advanced) -->
  <block type="espnow_send">
    <value name="MESSAGE">
      <shadow type="text">
        <field name="TEXT">Hello</field>
      </shadow>
    </value>
    <value name="PEER">
      <shadow type="math_number">
        <field name="NUM">0</field>
      </shadow>
    </value>
    <comment pinned="false" h="80" w="160">Send message to a specific peer by index (0 = first peer).</comment>
  </block>
  
  <!-- Receive Message (Simple) -->
  <block type="espnow_receive_simple">
    <comment pinned="false" h="80" w="160">Receive message with 1 second timeout. Returns None if no message.</comment>
  </block>
  
  <!-- Receive Message (Advanced) -->
  <block type="espnow_receive">
    <value name="TIMEOUT">
      <shadow type="math_number">
        <field name="NUM">1000</field>
      </shadow>
    </value>
    <comment pinned="false" h="80" w="160">Receive message with custom timeout in milliseconds.</comment>
  </block>
  
  </category>