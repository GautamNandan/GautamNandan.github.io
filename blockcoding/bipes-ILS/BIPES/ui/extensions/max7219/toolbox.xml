  <category name="MAX7219 LED Matrix" colour="#9C27B0">
    
    <label text="Setup"></label>
    
    <block type="max7219_init">
      <comment pinned="false">CLK=Clock, DIO=Data, CS=Chip Select. Count=number of connected matrix modules</comment>
      <value name="CLK_PIN">
        <shadow type="pinout">
          <field name="PIN">14</field>
        </shadow>
      </value>
      <value name="DIO_PIN">
        <shadow type="pinout">
          <field name="PIN">16</field>
        </shadow>
      </value>
      <value name="CS_PIN">
        <shadow type="pinout">
          <field name="PIN">27</field>
        </shadow>
      </value>
      <value name="COUNT">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    
    <block type="max7219_brightness">
      <comment pinned="false">Brightness: 0 (dim) to 15 (bright)</comment>
      <value name="BRIGHTNESS">
        <shadow type="math_number">
          <field name="NUM">7</field>
        </shadow>
      </value>
    </block>
    
    <label text="Display Control"></label>
    
    <block type="max7219_show"></block>
    
    <block type="max7219_clear"></block>
    
    <block type="max7219_wake"></block>
    
    <block type="max7219_shutdown"></block>
    
    <label text="Text Display"></label>
    
    <block type="max7219_text">
      <value name="TEXT">
        <shadow type="text">
          <field name="TEXT">ILS</field>
        </shadow>
      </value>
      <value name="X">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="Y">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    
    <block type="max7219_scroll_text">
      <value name="TEXT">
        <shadow type="text">
          <field name="TEXT">INFINITY LEARNING SPACE</field>
        </shadow>
      </value>
      <value name="DELAY">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>
    
    <block type="max7219_number">
      <value name="NUMBER">
        <shadow type="math_number">
          <field name="NUM">2025</field>
        </shadow>
      </value>
      <value name="X">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="Y">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    
    <label text="Pixel Operations"></label>
    
    <block type="max7219_pixel">
      <comment pinned="false">Set individual pixel: x and y from 0-7 for single matrix</comment>
      <value name="X">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="Y">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <field name="STATE">TRUE</field>
    </block>
    
    <block type="max7219_fill">
      <field name="STATE">TRUE</field>
    </block>
    
